{
  "manifest_version": 3,
  "name": "Web Page Recorder",
  "description": "Record web page content with Alt+Shift+X shortcut",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "desktopCapture",
    "downloads",
    "scripting",
    "tabCapture",
    "windows",
    "storage",
    "commands",
    "audioCapture"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Start Recording"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>", "http://*/*", "https://*/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "commands": {
    "start-recording": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Alt+Shift+X",
        "windows": "Alt+Shift+X",
        "linux": "Alt+Shift+X"
      },
      "description": "Start recording"
    }
  },
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
} 